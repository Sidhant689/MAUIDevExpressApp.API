<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MAUIDevExpressApp.UI.Views.ProductCategoryDetailPage"
             xmlns:viewmodels="clr-namespace:MAUIDevExpressApp.UI.ViewModels"
             x:DataType="viewmodels:ProductCategoryDetailViewModel"
             Title="{Binding Title}"
             BackgroundColor="White">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="15">
            <!-- Name Entry -->
            <Frame Padding="10" CornerRadius="10" BorderColor="LightGray">
                <VerticalStackLayout>
                    <Label Text="Category Name" FontSize="16" FontAttributes="Bold"/>
                    <Entry Text="{Binding Name}" Placeholder="Enter category name"/>
                </VerticalStackLayout>
            </Frame>

            
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>