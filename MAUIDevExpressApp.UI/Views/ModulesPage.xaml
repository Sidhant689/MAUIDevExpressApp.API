<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:dto="clr-namespace:MAUIDevExpressApp.Shared.DTOs;assembly=MAUIDevExpressApp.Shared"
             x:Class="MAUIDevExpressApp.UI.Views.ModulesPage"
             xmlns:viewmodels="clr-namespace:MAUIDevExpressApp.UI.ViewModels"
             Title="{Binding Title}">

    <Grid RowDefinitions="*,Auto" Padding="10">
        <ActivityIndicator Grid.RowSpan="2" 
                         IsVisible="{Binding IsBusy}"
                         IsRunning="{Binding IsBusy}"
                         HorizontalOptions="Center"
                         VerticalOptions="Center"/>

        <RefreshView Grid.Row="0" 
                    Command="{Binding LoadModulesCommand}"
                    IsRefreshing="{Binding IsBusy}">
            <CollectionView ItemsSource="{Binding Modules}"
                          SelectionMode="None">
                <CollectionView.ItemTemplate>
                    <DataTemplate x:DataType="dto:ModuleDTO">
                        <Frame Margin="0,5" Padding="10">
                            <Grid RowSpacing="10" ColumnSpacing="10">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <Label Grid.Row="0"
                                       Text="{Binding Name}"
                                       FontAttributes="Bold"/>

                                <Label Grid.Row="1"
                                       Text="{Binding Description}"
                                       FontSize="Small"/>

                                <HorizontalStackLayout Grid.Row="2" 
                                                     Spacing="10"
                                                     HorizontalOptions="End">
                                    <Button Text="Edit"
                                            BackgroundColor="Orange"
                                            TextColor="White"
                                            HeightRequest="35"
                                            Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodels:ModulesViewModel}}, 
                                                    Path=NavigateToEditCommand}"
                                            CommandParameter="{Binding}"/>

                                    <Button Text="Delete"
                                            BackgroundColor="Red"
                                            TextColor="White"
                                            HeightRequest="35"
                                            Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodels:ModulesViewModel}}, 
                                                    Path=DeleteModuleCommand}"
                                            CommandParameter="{Binding Id}"/>
                                </HorizontalStackLayout>
                            </Grid>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </RefreshView>

        <Button Grid.Row="1"
                Text="Add New Module"
                Command="{Binding NavigateToAddCommand}"
                Margin="0,10,0,0"/>
    </Grid>
</ContentPage>